// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model Project {
  id              Int         @id @default(autoincrement())
  name            String
  description     String
  longDescription String
  category        Category
  visits          Int?
  downloads       Int?
  revenue         Float?
  techStack       String[]
  size            Float?
  sizeUnit        Unit?
  links           Link[]
  card            String?
  metaImages      MetaImages?
  cover           Cover?
  assets          Asset[]
  embeds          String[]
}

model Link {
  id        Int     @id @default(autoincrement())
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int
  name      String
  url       String
}

model Cover {
  id        Int     @id @default(autoincrement())
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int     @unique
  url       String
  poster    String
}

model MetaImages {
  id          Int     @id @default(autoincrement())
  project     Project @relation(fields: [projectId], references: [id])
  projectId   Int     @unique
  facebookUrl String
  facebookAlt String
  twitterUrl  String
  twitterAlt  String
  googleUrl   String
}

model Asset {
  id        Int     @id @default(autoincrement())
  project   Project @relation(fields: [projectId], references: [id])
  projectId Int
  url       String
  mimetype  String
  alt       String
  title     String
  poster    String?
}

enum Category {
  GAMEDEV
  WEBDEV
  MOBILE
  BOT
  LOCALIZATION
  UIUX
  DESIGN
}

enum Unit {
  B
  KB
  MB
  GB
}
