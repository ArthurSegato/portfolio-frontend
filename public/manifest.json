{
  "$schema": "https://json.schemastore.org/web-manifest-combined.json",
  "lang": "en",
  "name": "Arthur Segato | Developer",
  "short_name": "Arthur Segato",
  "start_url": ".",
  "display": "standalone",
  "background_color": "#e5e6e6",
  "theme_color": "#1F2937",
  "orientation": "portrait-primary",
  "display_override": ["window-controls-overlay"],
  "description": "Hey, I'm a computer scientist developing stuff for the web, and games in my spare time, but I create other things too, so if that interests you, why not take a look at my website?",
  "icons": [
    { "src": "/icon-192.png", "type": "image/png", "sizes": "192x192" },
    { "src": "/icon-512.png", "type": "image/png", "sizes": "512x512" },
    {
      "src": "/maskable-icon.png",
      "sizes": "196x196",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "screenshots": [
    {
      "src": "/horizontal.jpg",
      "sizes": "1920x1080",
      "type": "image/jpg",
      "form_factor": "wide",
      "label": "Desktop view"
    },
    {
      "src": "/vertical.jpg",
      "sizes": "720x1280",
      "type": "image/jpg",
      "form_factor": "narrow",
      "label": "Mobile view"
    }
  ]
}
